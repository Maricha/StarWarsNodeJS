      </div>

      <div class="description-wrapper">
        <div class="description">
          <h2 class="movie-header">Opis</h2>
          <p><%= movie.description %> </p>
        </div>

        <div class="main-characters">
          <h2 class="movie-header">GÅ‚owni bohaterowie</h2>
          <ul>
            <% for (var i = 0; i<main_characters.length; i++) { %>
              <li><%= main_characters[i] %></li>
            <% } %>
          </ul>

        </div>
      </div>
    </div>



    <% include templ/footer.ejs %>
    <% include templ/scripts.ejs %>

  </body>
</html>
